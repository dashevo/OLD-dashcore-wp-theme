{% extends "base.twig" %}

{% block content %}
  <main>
    <div block="blog">
      {% for post in posts %}
        <article block="teaser">
          <div elem="image" style="background-image:url({{ post.thumbnail.src }})"></div>
          <h1 elem="title"><a href="{{ post.link }}">{{ post.title }}</a></h1>
          <div elem="date">{{ post.date }}</div>
          <div elem="body">
            {{ post.get_preview(20, false, "") }}
          </div>
        </article>
      {% endfor %}
    </div>
  </main>
{% endblock %}
